{# src/doc/PlateformBundle/views/DossierAgent/pdf.html.twig #}
<html>
<head>
<!-- CDN Bootstrap 4.0 -->
<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
	integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
	crossorigin="anonymous">
<!-- Custom fonts for this template-->
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
<style>
h1 {
	background: #ffc966;
	font-size: 25px;
	font-weight: bold;
	text-align: center;
	width: auto;
}

h3 {
	/* background: #ffc966; */
	color: #798933;
	font-size: 20px;
	font-weight: bold;
	text-decoration: underline;
}

h4{
	font-size: 12px;
	font-weight: bold;
}

h5{
	background: #ffc966;
}
p {
	font-size: 15px;
	font-style: italic;
	text-align: justify;
}

.spacer {
	margin-top: 15%;
	margin-left: 30%;
	margin-right: 30%;
}

li{
	line-height : 10pt;
}

span{
	font-size: 13px;
}
a:hover, a:focus, a {
	color: black;
}	

.grad_nav {
	background: linear-gradient(to top left, #ffc966, #ffaa55);
	width: auto;
	height: auto;
}

.grad_menu {
	background: linear-gradient(to top left, #DCDCDC, #F5F5F5);
	width: auto;
	height: auto;
}
.champ{
	color : green;
	font-weight : bold;
	font-style : normal;
	font-size: 16px;
	position: relative;
	cursor : help;
}

.champ:hover::after, .origine:hover::after, .format:hover::after {
  content: attr(aria-label);  /* on affiche aria-label */
  color: grey;
  top: -70%;
  font-size: 12px;
  transform: translateX(-50%); /* on centre horizontalement  */
  z-index: 1; /* pour s'afficher au dessus des éléments en position relative */
  white-space: nowrap;  /* on interdit le retour à la ligne */
}

.ordre{
	font-weight : bold;
	font-style : oblique;
	font-size: 16px;
}

.origine{
	color : #BA55D3;
	font-weight : bold;
	font-style : normal;
	font-size: 16px;
	cursor: help;
	position: relative;
}

.format{
	color : #BA55D3;
	font-weight : bold;
	font-style : normal;
	cursor: help;
	position: relative;	
}
 .libelle{
 	font-size: 16px;
	color : blue;
	font-style : normal;
 }
body {padding-bottom: 70px;}
;
</style>
</head>
{% block body %}
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-12">
				<h1>{{ menu }} : {{ page }}</h1>

				<table
					class="table table-sm table-responsive-sm table-active table-bordered">
					<tr class="table-active">
						<th colspan="3" align="center">Menu
						</td>
					</tr>
					<tr>
						{% for doss in listDoss %}
						<td><a class="dropdown-item" href="#{{doss.getId() }}">{{ doss.getChamp() }}</a></td>
						{% if loop.index%2 == 0 %}
					</tr>
					<tr>
						{% endif %}
						{% endfor %}
					</tr>
				</table>
				{% for doss in listDoss %}
				<div id={{doss.getId() }}
					<p><span class="champ" aria-label=": champ d'Astre RH">{{ doss.getChamp() }}</span><span class="origine" aria-label=": origine du champ"> {{ doss.getOrigine() }}</span> <span class="format" aria-label=": format du champ"><sup>{{ doss.getFormat() }}</sup></span> : <span class="libelle">{{ doss.getLibelle() }}</span>
				</p>
				</div>
				{% endfor %}
			</div>
		</div>
	</div>
</body>
{% endblock %}
</html>