{# src/doc/PlateformBundle/views/DossierAgent/pdf.html.twig #}
<html>
<head>
<!-- CDN Bootstrap 4.0 -->
<link rel="stylesheet"
	href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
	integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
	crossorigin="anonymous">
<!-- Custom fonts for this template-->
<link rel="stylesheet"
	href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
<style>
h1 {
	background: #ffc966;
	font-size: 30px;
	font-style: bold;
	text-align: center;
	width: auto;
}

h3 {
	/* background: #ffc966; */
	color: #798933;
	font-size: 25px;
	font-style: bold;
	text-decoration: underline;
}

p {
	font-size: 15px;
	font-style: italique;
	text-align: justify;
}

.spacer {
	margin-top: 15%;
	margin-left: 30%;
	margin-right: 30%;
}

a:hover, a {
	color: black;
}

.grad_nav {
	background: linear-gradient(to top left, #ffc966, #ffaa55);
	width: auto;
	height: auto;
}

.grad_menu {
	background: linear-gradient(to top left, #DCDCDC, #F5F5F5);
	width: auto;
	height: auto;
}
</style>
</head>
{% block body %}
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-12">
				<h1>{{ menu }} : {{ page }}</h1>

				<table
					class="table table-sm table-responsive-sm table-active table-bordered">
					<tr class="table-active">
						<th colspan="3" align="center">Menu
						</td>
					</tr>
					<tr>
						{% for doss in listDoss %}
						<td><a class="dropdown-item" href="#{{doss.getId() }}">{{ doss.getChamp() }}</a></td>
						{% if loop.index%2 == 0 %}
					</tr>
					<tr>
						{% endif %}
						{% endfor %}
					</tr>
				</table>
				{% for doss in listDoss %}
				<div id={{doss.getId() }}>
					<br>
					**************************************************************************************************************************
					<br>
				</div>
				<h3>Champ</h3>
				<p>
					{{ doss.getChamp() }}
				</p>

				{% if doss.getOrigine() %}
				<h3>Origine</h3>
				<p>
					{{ doss.getOrigine() }}
				</p>
				{% else %}
				{% endif %}

				{% if doss.getFormat() %}
				<h3>Format</h3>
				<p>
					{{ doss.getFormat() }}
				</p>
				{% else %}
				{% endif %}

				{% if doss.getLibelle() %}
				<h3>Libell&eacute;</h3>
				<p>
					{{ doss.getLibelle() }}
				</p>
				{% else %}
				{% endif %}

				{% if doss.getNum_ordre() %}
				<h3>Num&eacute;ro d'ordre</h3>
				<p>
					{{ doss.getNum_ordre() }}
				</p>
				{% else %}
				{% endif %}

				{% endfor %}
			</div>
		</div>
		{#<div class="pagination justify-content-center">{{
		knp_pagination_render(listDocs) }}</div>#}
	</div>

	{% endblock %}
</html>