{# src/doc/PlateformBundle/views/Tutoriel/seeTutoriels.html.twig #}
{% extends "CoreBundle::abst.html.twig" %}

{% block title %}
{{ parent() }}
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block body %}
<body>
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-12">
				<a class="btn btn-success" href="{{ asset('/tutoriel/add') }}"
				  >Ajouter un tutoriel</a>
				<h1>Liste des tutoriels</h1>
				<table class="table table-striped">
					<thead>
					<tr>
						<td>Nom du tutoriel</td>
						<td>DÃ©tail</td>
					</tr>
					</thead>
					<tbody>
					{% for tuto in listTuto%}
						<tr>
							<td><p>{{ tuto.getNomTuto() }}</p></td>
							<td><p>{{ tuto.getTutoDetails() }}</p></td>
							<td><a class="fa fa-info-circle" style="font-size:30px;color:orange" href="/tutoriel/see/{{ tuto.getId() }}"></a></td>
							{% if app.user %}
								<td><a class="fa fa fa-edit" style="font-size:30px;color:orange" href="/tutoriel/mod/{{ tuto.getId() }}"></a></td>
								<td><a class="fa fa-trash" style="font-size:30px;color:orange" href="/tutoriel/del/{{ tuto.getId() }}"></a></td>
							{% endif %}
						</tr>
					{% endfor %}
					</tbody>
				</table>
				<div class="pagination justify-content-center">
			            {{ knp_pagination_render(listTuto) }}
				</div>
			</div>
		</div>
	</div>
</body>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}