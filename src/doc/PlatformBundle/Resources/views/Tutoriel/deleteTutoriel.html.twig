{% extends "CoreBundle::abst.html.twig" %}

{% block title %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <body>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-12">
                <h1>Consulter les tutoriels </h1>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <td>Nom du tutoriel</td>
                        <td>Details</td>
                    </tr>
                    </thead>
                    <tbody>
                    {% for t in listTuto%}
                        <tr>
                            <td><p>{{ t.getNomTuto() }}</p></td>
                            <td><p>{{ t.getTutoDetails() }}</p></td>
                            <td><a class="fa fa-info-circle" style="font-size:30px;color:orange" href="/tutoriel/see/{{ t.getId() }}"></a></td>
                            <td><a class="material-icons" style="font-size:30px;color:red" href="/tutoriel/del/{{ t.getId() }}">delete</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div class="pagination justify-content-center">
                    {{ knp_pagination_render(listTuto) }}
                </div>
            </div>
        </div>
    </div>
    </body>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}